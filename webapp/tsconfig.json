{
    "compilerOptions": {
        "target": "es5",
        "rootDirs": [
            "src"
        ],
        "outDir": "build",
        "lib": [
            "dom",
            "esnext"
        ],
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmit": true,
        "jsx": "react",
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
                "options": {
                    "classnameTransform": "dashes",
                    "customMatcher": "\\.module\\.css$",
                    "postcssOptions": {
                        "useConfig": true
                    }
                }
            }
        ]
    },
    "include": [
        "src/**/*",
        "types/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "coverage",
        "webpack.*.js",
        "*.config.js",
        "**/*.test.ts*"
    ]
}